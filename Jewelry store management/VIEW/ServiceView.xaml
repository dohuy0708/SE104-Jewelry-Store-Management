<Window x:Class="Jewelry_store_management.VIEW.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Jewelry_store_management.VIEW"
        mc:Ignorable="d"
        Title="ServiceView" Height="470" Width="659"
        DataContext="{StaticResource Service}">
    <StackPanel Background="SkyBlue">
        <StackPanel>
                <Label Margin="60 30 60 0" Content="DỊCH VỤ" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="30 10 0 0">
                        <Label Content="MÃ DỊCH VỤ"></Label>
                        <TextBox Width="170"  ></TextBox>
                    </StackPanel>
                    <StackPanel Margin="30 10 30 0">
                        <Label Content="TÊN DỊCH VỤ"></Label>
                        <TextBox Width="170"  ></TextBox>
                    </StackPanel>
                <StackPanel Margin="30 10 30 0">
                    <Label Content="TÊN KHÁCH HÀNG"></Label>
                    <TextBox Width="170"  ></TextBox>
                </StackPanel>

            </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="30 10 0 0">
                        <Label Content="SỐ ĐIỆN THOẠI"></Label>
                        <TextBox Width="170"  ></TextBox>
                    </StackPanel>
                    <StackPanel Margin="30 10 30 0">
                        <Label Content="EMAIL"></Label>
                        <TextBox Width="170"  ></TextBox>
                    </StackPanel>
                <StackPanel Margin="30 10 30 0">
                    <Label Content="THỜI GIAN"></Label>
                    <TextBox Width="170"  ></TextBox>
                </StackPanel>                    
            </StackPanel>
            <StackPanel Margin="30 10 30 0">
                <Label Content="ĐỊA CHỈ"></Label>
                <TextBox Width="591"></TextBox>
            </StackPanel>
            <StackPanel Margin="30 10 30 0" Height="102">
                <Label Content="MÔ TẢ"></Label>
                <TextBox Width="591" Height="78"></TextBox>
            </StackPanel>
            <Button Margin="0 20 0 30" Width="140" Style="{StaticResource MaterialDesignFlatButton}" 
                    md:ButtonAssist.CornerRadius="10" BorderThickness="2" BorderBrush="Aqua"  Background="Aqua" Foreground="White" Content="Thêm"></Button>
            </StackPanel>
    </StackPanel>
</Window>
