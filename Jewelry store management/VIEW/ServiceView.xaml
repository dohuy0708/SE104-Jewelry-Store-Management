<Window x:Class="Jewelry_store_management.VIEW.ServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Jewelry_store_management.VIEW"
        mc:Ignorable="d"
       Icon="\Drawable\Images\Logo.png"
        Title="H-Jewelry"
         WindowStartupLocation="CenterScreen"
         ResizeMode="NoResize"
        Height="600" Width="700"
        DataContext="{StaticResource Service}">
    <StackPanel Background="AliceBlue">
        <StackPanel>
                <Label Margin="60 10 60 0" Content="DỊCH VỤ" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            <TextBlock Text="THÔNG TIN DỊCH VỤ: " FontWeight="DemiBold" FontSize="15 " Margin="20 0 60 0"></TextBlock>
            <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="30 5 30 0">
                        <Label Content="MÃ DỊCH VỤ"></Label>
                        <TextBox   ></TextBox>
                    </StackPanel>
                
                    <StackPanel Margin="30 5 0 0">
                        <Label Content="TÊN DỊCH VỤ"></Label>
                        <TextBox    ></TextBox>
                    </StackPanel>
                    <StackPanel Margin="30 5 30 0">
                       <Label Content="NGÀY LẬP"></Label>
                       <TextBox   ></TextBox>
                     </StackPanel>
                    <StackPanel Margin="30 5 30 0">
                    <Label Content="NGÀY GIAO"></Label>
                    <TextBox    ></TextBox>
                     </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="30 5 30 0">
                    <Label Content="TÊN KHÁCH HÀNG"></Label>
                    <TextBox    ></TextBox>
                </StackPanel>
                <StackPanel Margin="30 5 0 0">
                    <Label Content="SỐ ĐIỆN THOẠI"></Label>
                    <TextBox    ></TextBox>
                </StackPanel>
                <StackPanel Margin="30 5 30 0">
                    <Label Content="EMAIL"></Label>
                    <TextBox    ></TextBox>
                </StackPanel>

                <StackPanel Margin="30 5 30 0">
                    <Label Content="ĐỊA CHỈ"></Label>
                    <TextBox  ></TextBox>
                </StackPanel>
            </StackPanel>


            <TextBlock Text="THÔNG TIN SẢN PHẨM: " FontWeight="DemiBold" FontSize="15 " Margin="20 10 60 0"></TextBlock>

            <StackPanel Orientation="Horizontal" >
                <StackPanel Margin="30 5 30 0">
                    <Label Content="SẢN PHẨM"></Label>
                    <TextBox Width="120"  ></TextBox>
                </StackPanel>
                <StackPanel Margin="30 5 30 0">
                    <Label Content="SỐ LƯỢNG"></Label>
                    <TextBox Width="70"  ></TextBox>
                </StackPanel>
                <StackPanel Margin="30 5 0 0">
                    <Label Content="ĐƠN GIÁ"></Label>
                    <TextBox Width="100"  ></TextBox>
                </StackPanel>

                <StackPanel Margin="30 5 30 0" >
                    <Label Content="MÔ TẢ"></Label>
                    <TextBox  ></TextBox>
                </StackPanel>
                
            </StackPanel>
            <Button Margin="0 10 0 0" Width="160" Style="{StaticResource MaterialDesignFlatButton}" 
          md:ButtonAssist.CornerRadius="10" BorderThickness="2" BorderBrush="Aqua"  Background="Aqua" Foreground="White" Content="THÊM SẢN PHẨM"></Button>
            <DataGrid ItemsSource="{Binding Productlist}" AutoGenerateColumns="False" CanUserAddRows="False" Background="AliceBlue" Margin="30 10 30 0" Height="180">
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="14" Header="Nhà cung cấp" Binding="{Binding Name}"/>
                    <DataGridTextColumn FontSize="14"  Header="Tên sản phẩm" Binding="{Binding Name}"/>
                    <DataGridTextColumn FontSize="14"  Header="Size" Binding="{Binding Name}"/>
                    <DataGridTextColumn FontSize="14"  Header="Số lượng" Binding="{Binding Name}"/>
                    <DataGridTextColumn FontSize="14"  Header="Giá" Binding="{Binding Price}"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Margin="0 20 0 30" Width="140" Style="{StaticResource MaterialDesignFlatButton}" 
                    md:ButtonAssist.CornerRadius="10" BorderThickness="2" BorderBrush="Aqua"  Background="Aqua" Foreground="White" Content="THÊM DỊCH VỤ"></Button>
            </StackPanel>
    </StackPanel>
</Window>
