<Window x:Class="Jewelry_store_management.VIEW.AddBillView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jewelry_store_management.VIEW"
        mc:Ignorable="d"
        Title="AddBillView" Height="663" Width="594"
        DataContext="{StaticResource AddBill}">
    <StackPanel Background="AliceBlue">
        <TextBlock Text="HÓA ĐƠN" FontSize="36" Margin="60 20 60 10" TextAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="60 0 0 0">
                <TextBlock Text="THÔNG TIN HÓA ĐƠN" FontSize="18" Margin="0 0 0 10"></TextBlock>
                <StackPanel Margin="0 2 0 0">
                    <Label Content="TÊN KHÁCH HÀNG"></Label>
                    <TextBox>                      
                    </TextBox>
                </StackPanel>
                <StackPanel Margin="0 2 0 0">
                    <Label Content="SỐ ĐIỆN THỌAI"></Label>
                    <TextBox>
                    </TextBox>
                </StackPanel>
                <StackPanel  Margin="0 2 0 0">
                    <Label Content="THỜI GIAN"></Label>
                    <TextBox>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Margin="0 2 0 0">
                    <StackPanel>
                        <Label Content="SỐ HÓA ĐƠN"></Label>
                        <TextBox>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Margin="20 0 0 0">
                        <Label Content="KHUYẾN MÃI"></Label>
                        <TextBox>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
                
            </StackPanel>
            <StackPanel Margin="60 0 0 0">
                <TextBlock Text="CHI TIẾT HÓA ĐƠN" FontSize="18" Margin="0 0 0 10"></TextBlock>
                <StackPanel  Margin="0 2 0 0">
                    <Label Content="TÊN SẢN PHẨM"></Label>
                    <ComboBox Width="205" ItemsSource="{Binding GetProductList}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedProduct}">
                      
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Margin="0 2 0 0">
                <StackPanel >
                    <Label Content="SIZE"></Label>
                    <TextBox Width="90">
                    </TextBox>
                </StackPanel>
                <StackPanel Margin="25 0 0 0">
                    <Label Content="SỐ LƯỢNG"></Label>
                    <TextBox Width="90">
                    </TextBox>
                </StackPanel>                   
                </StackPanel>
                <Button Margin="30" Content="THÊM SẢN PHẨM" Command="{Binding AddproductCommand}"></Button>               
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="80 10 30 0"/>
        <DataGrid ItemsSource="{Binding ProductList}" AutoGenerateColumns="False" CanUserAddRows="False" Background="Transparent" Margin="60 10 60 0" Height="162" Width="500" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding SalePrice}"/>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="30" Height="30" Margin="5" Background="Transparent" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                    CommandParameter="{Binding}">
                                <Image Source="/Drawable/Icons/icon_addPro.png" Width="20" Height="20" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel>
        <StackPanel Orientation="Horizontal" Margin=" 100 10 0 0">
            <TextBlock Text="TỔNG TIỀN:   " FontSize="14"></TextBlock>
            <TextBlock Text="{Binding TotalPrice}" FontSize="14"></TextBlock>
        </StackPanel>
            <StackPanel Orientation="Horizontal" Margin=" 100 10 0 0">
                <TextBlock Text="GIẢM GIÁ:   " FontSize="14"></TextBlock>
                <TextBlock Text="{Binding Voucher}" FontSize="14"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin=" 100 10 0 0">
                <TextBlock Text="THÀNH TIỀN:   " FontSize="14"></TextBlock>
                <TextBlock Text="{Binding Cost}" FontSize="14"></TextBlock>
            </StackPanel>
        </StackPanel>
        <Button Margin="100 20 100 0" Content="THÊM HÓA ĐƠN" ></Button>
    </StackPanel>
</Window>
