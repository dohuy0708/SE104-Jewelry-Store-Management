<Window x:Class="Jewelry_store_management.VIEW.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jewelry_store_management.VIEW" xmlns:viewmodel="clr-namespace:Jewelry_store_management.VIEWMODEL" 
        mc:Ignorable="d"
        Title="StartView" Height="450" Width="800"
        DataContext="{StaticResource StartVM}">
       
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="385"/>

            <ColumnDefinition Width="415"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0">
            <Image Source="/Drawable/Images/Logo_intro.png"></Image>
        </Border>
        <Grid Grid.Column="1">

            <ContentControl x:Name="Pages"
                     Content="{Binding CurrentView}" Margin="0,0,-349,-275" />

        </Grid>
    </Grid>
</Window>
